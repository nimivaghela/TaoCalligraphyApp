<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            tools:context=".ui.meditation_rooms_detail.TaoCalligraphyFieldsRoomsActivity">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackgroundImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_background_tcf_rooms_1" />

            <FrameLayout
                android:id="@+id/fmScrollable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivWhiteBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_240sdp"
                    android:background="@drawable/bg_white_top_left_right_curve" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="none">

                    <FrameLayout
                        android:id="@+id/fmTCFMasterImages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_200sdp"
                        android:layout_marginEnd="0dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/_50sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_336sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_sher"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_288sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_sher"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_240sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_sher"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_192sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_allan"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_144sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_cecilia"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_96sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_david"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginStart="@dimen/_48sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_francisco"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummy_master_sha"
                            app:civ_border_color="@color/gold"
                            app:civ_border_width="@dimen/_2sdp" />

                    </FrameLayout>

                </HorizontalScrollView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvFRMasterImage"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_200sdp"
                    android:layout_marginEnd="0dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/gold"
                    app:cardCornerRadius="@dimen/_22sdp"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_22sdp"
                        app:cardElevation="0dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_profile_dummy3" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCRMasterImage"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_200sdp"
                    android:layout_marginEnd="0dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/light_grey"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_1sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_profile_dummy4" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_270sdp"
                    android:animateLayoutChanges="true">

                    <FrameLayout
                        android:id="@+id/fmDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/llTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/TextViewJostMediumStyle"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:lineSpacingMultiplier="0.7"
                                    android:text="Global Wellness Center"
                                    android:textColor="@color/gold"
                                    android:textSize="@dimen/_28ssp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/llOptionMenuForMessageAndRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingTop="@dimen/_15sdp"
                                    android:paddingEnd="@dimen/_20sdp"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:src="@drawable/vd_three_dot_grey_color_icon" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTopicName"
                                style="@style/TextViewJostMediumStyle"
                                android:layout_below="@+id/llTitle"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:paddingStart="@dimen/_20sdp"
                                android:paddingEnd="@dimen/_20sdp"
                                android:text="ALL TOPICS"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/_11ssp" />

                            <LinearLayout
                                android:id="@+id/llRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvTopicName"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_20sdp"
                                android:paddingEnd="@dimen/_10sdp">

                                <com.willy.ratingbar.ScaleRatingBar
                                    android:id="@+id/rbRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srb_clearRatingEnabled="true"
                                    app:srb_clickable="true"
                                    app:srb_drawableEmpty="@drawable/ic_star"
                                    app:srb_drawableFilled="@drawable/ic_star_fill"
                                    app:srb_isIndicator="true"
                                    app:srb_minimumStars="1"
                                    app:srb_numStars="5"
                                    app:srb_rating="3"
                                    app:srb_scrollable="true"
                                    app:srb_starHeight="14dp"
                                    app:srb_starPadding="1dp"
                                    app:srb_starWidth="14dp"
                                    app:srb_stepSize="1"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvRateCount"
                                    style="@style/TextViewJostRegularStyle"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="4.5K"
                                    android:textColor="@color/medium_grey"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvFavourites"
                                style="@style/TextViewJostRegularStyle"
                                android:layout_below="@+id/tvTopicName"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/llRating"
                                android:drawableStart="@drawable/vd_gold_heart_fill"
                                android:drawablePadding="@dimen/_4sdp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:text="64K"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/_10ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvUsers"
                                style="@style/TextViewJostRegularStyle"
                                android:layout_below="@+id/tvTopicName"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/tvFavourites"
                                android:drawableStart="@drawable/vd_small_gold_user"
                                android:drawablePadding="@dimen/_4sdp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_15sdp"
                                android:text="97K"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/_10ssp" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvFollowUnfollow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvTopicName"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_toEndOf="@+id/tvUsers"
                                app:cardCornerRadius="@dimen/_4sdp"
                                app:cardElevation="0dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/btnFollow"
                                    style="@style/TextViewJostMediumStyle"
                                    android:background="@drawable/bg_white_curve_gold_border_4dp"
                                    android:gravity="center"
                                    android:includeFontPadding="false"
                                    android:paddingStart="@dimen/_18sdp"
                                    android:paddingTop="@dimen/_2sdp"
                                    android:paddingEnd="@dimen/_18sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:text="@string/unfollow"
                                    android:textAllCaps="false"
                                    android:textColor="@color/gold"
                                    android:textSize="@dimen/_11ssp" />

                            </com.google.android.material.card.MaterialCardView>

                        </RelativeLayout>

                        <com.loopeer.shadow.ShadowView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            app:backgroundColor="@android:color/transparent"
                            app:shadowMargin="@dimen/_8sdp"
                            app:shadowMarginBottom="@dimen/_20sdp"
                            app:shadowMarginLeft="@dimen/_20sdp"
                            app:shadowMarginRight="@dimen/_12sdp"
                            app:shadowMarginTop="@dimen/_20sdp"
                            app:shadowRadius="@dimen/_8sdp">

                            <LinearLayout
                                android:id="@+id/llMessageHostAndReportRoom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:animateLayoutChanges="true"
                                android:background="@drawable/bg_white_rectangle_3_side_corner"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:paddingEnd="@dimen/_12sdp"
                                android:paddingBottom="@dimen/_12sdp"
                                android:visibility="gone">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvMessageHost"
                                    style="@style/TextViewJostMediumStyle"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:drawableStart="@drawable/vd_chat_small"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Message Host"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_10ssp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvReportRoom"
                                    style="@style/TextViewJostMediumStyle"
                                    android:layout_gravity="center"
                                    android:drawableStart="@drawable/vd_alert_triangle"
                                    android:drawablePadding="@dimen/_13sdp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Report Room"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>
                        </com.loopeer.shadow.ShadowView>
                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRoomsTabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fmDetail"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:clipToPadding="false"
                        android:fadeScrollbars="false"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="0dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_custom_tab_view" />

                    <FrameLayout
                        android:id="@+id/root_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/rvRoomsTabs"
                        android:paddingTop="@dimen/_10sdp" />

                </RelativeLayout>

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp" />

            </FrameLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</layout>