<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/nsvPendingApprovalRoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_80"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/_20sdp"
                android:src="@drawable/vd_cross_gray"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewJostMediumStyle"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Mindfulness for\nIT Professionals"
                android:textColor="@color/secondary_black"
                android:textSize="@dimen/_22ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewJostRegularStyle"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="Weâ€™ve received your request.\n\nYour room will be reviewed by our team before it can be approved.\n\nThank you for your heart of service to the community!"
                android:textColor="@color/secondary_black"
                android:textSize="@dimen/_14ssp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvBackToRoom"
                style="@style/CardViewStyle"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="0dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBackToRoom"
                    style="@style/ButtonGoldStyle"
                    android:background="@drawable/bg_light_dark_golden_curve"
                    android:text="BACK TO ROOMS" />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </RelativeLayout>

</layout>