<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/white_80">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal">

            <LinearLayout
                android:id="@+id/llPurchaseMediationView"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:animateLayoutChanges="true"
                android:background="@drawable/bg_white_gold_border_12dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPayAmount"
                    style="@style/TextViewJostMediumStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_8ssp"
                    tools:text="$10 CAD" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@color/light_gray" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPayHeart"
                    style="@style/TextViewJostMediumStyle"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/vd_golder_heart"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/unlock_instantly"
                    android:textAllCaps="true"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</layout>
