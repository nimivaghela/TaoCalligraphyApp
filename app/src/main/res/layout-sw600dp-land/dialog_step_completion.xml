<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/vd_cross_gray"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_30sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vd_mascot" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewJostMediumStyle"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/amazing"
                android:textColor="@color/gold"
                android:textSize="@dimen/_22ssp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSessionReason"
                style="@style/TextViewJostMediumStyle"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/world_better_place"
                android:textColor="@color/secondary_black"
                android:textSize="@dimen/_18ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10ssp"
                android:weightSum="1">

                <com.google.android.material.card.MaterialCardView
                    style="@style/CardViewStyle"
                    android:layout_width="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="0.5"
                    app:cardElevation="0dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnClose"
                        style="@style/ButtonGoldStyle"
                        android:background="@drawable/bg_light_dark_golden_curve"
                        android:text="@string/close"
                        android:textSize="@dimen/_10ssp" />

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    style="@style/CardViewStyle"
                    android:layout_width="0dp"
                    android:layout_margin="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="0.5"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="0dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCloseAndJournal"
                        style="@style/ButtonWhiteStyle"
                        android:background="@drawable/bg_white_curve_gold_border"
                        android:text="@string/close_journal"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_10ssp"
                        app:backgroundTint="@null"
                        app:fontFamily="@font/font_jost_medium"
                        app:icon="@drawable/vd_pencil"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/gold" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
