<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:paddingStart="0dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivMeditationProgram"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_card_custom_corners"
            app:srcCompat="@drawable/ic_dummy_banner_forth" />

        <ImageView
            app:layout_constraintBottom_toBottomOf="@id/ivMeditationProgram"
            app:layout_constraintTop_toTopOf="@id/ivMeditationProgram"
            app:layout_constraintEnd_toEndOf="@id/ivMeditationProgram"
            app:layout_constraintStart_toStartOf="@id/ivMeditationProgram"
            android:src="@drawable/vd_play_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@id/ivMeditationProgram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/TextViewJostMediumStyle"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginTop="@dimen/_4sdp"
            android:ellipsize="end"
            android:text="Sound Sleep"
            android:textColor="@color/gold"
            android:textSize="@dimen/_6ssp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>