<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_12sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_60sdp"
            app:cardBackgroundColor="@color/shimmer_light"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_1sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_1sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/dummy_session_image_dummy_2" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostMediumStyle"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="NOV 14"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/_10ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="1â€“2 pm"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewJostMediumStyle"
                android:layout_marginTop="@dimen/_1sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Healthy Spleen, Releasing"
                android:textColor="@color/secondary_black"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubTitle"
                    style="@style/TextViewJostRegularStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="with Sunil"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/rbRating"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_height="wrap_content"
                        app:srb_clearRatingEnabled="true"
                        app:srb_clickable="true"
                        app:srb_drawableEmpty="@drawable/ic_star"
                        app:srb_drawableFilled="@drawable/ic_star_fill"
                        app:srb_isIndicator="true"
                        app:srb_minimumStars="1"
                        app:srb_numStars="5"
                        app:srb_rating="3"
                        app:srb_scrollable="true"
                        app:srb_starHeight="14dp"
                        app:srb_starPadding="1dp"
                        app:srb_starWidth="14dp"
                        app:srb_stepSize="1"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRateCount"
                        style="@style/TextViewJostMediumStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="4"
                        android:textColor="@color/medium_grey"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>