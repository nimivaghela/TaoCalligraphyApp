<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.meditation_session.AudioMeditationSessionActivity">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSessionBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.2"
                android:scaleType="fitXY"
                android:transitionName="robot"
                app:srcCompat="@drawable/ic_dummy_session_bg" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/llBottomController">

                <LinearLayout
                    android:id="@+id/llMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_20sdp">

                        <include
                            android:id="@+id/toolbar"
                            layout="@layout/toolbar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cardHostImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:strokeColor="@color/gold"
                                app:strokeWidth="@dimen/_2sdp">

                                <ImageView
                                    android:id="@+id/ivUserProfile"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_dummy_host_image"
                                    android:visibility="visible" />

                            </com.google.android.material.card.MaterialCardView>

                            <ImageView
                                android:id="@+id/ivAudioMuteStatus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/vd_mute_audio"
                                android:visibility="gone" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewJostMediumStyle"
                                android:text="Breathwork for a Clear Mind"
                                android:textColor="@color/secondary_black"
                                android:textSize="@dimen/_20ssp"
                                app:lineHeight="@dimen/_20sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvHostName"
                                style="@style/TextViewJostRegularStyle"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="WITH SUNIL"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_11ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvYouAreHosting"
                                style="@style/TextViewJostRegularStyle"
                                android:drawableStart="@drawable/vd_session_host_icon"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="center"
                                android:text="@string/you_are_hosting"
                                android:textColor="@color/gold"
                                android:textSize="@dimen/_11ssp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/llSessionDateTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/TextViewJostSemiBoldStyle"
                                    android:text="Nov 27"
                                    android:textColor="@color/gold"
                                    android:textSize="@dimen/_15ssp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/TextViewJostRegularStyle"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:text="7:30–8:30 AM"
                                    android:textColor="@color/gold"
                                    android:textSize="@dimen/_15ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llSessionMemberView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_gold_22dp"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingTop="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_15sdp"
                                android:paddingBottom="@dimen/_3sdp"
                                android:visibility="gone">

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/TextViewJostRegularStyle"
                                    android:drawableStart="@drawable/vd_session_member_small"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:text="15"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11ssp" />

                                <View
                                    android:id="@+id/vvMemberCountSeprator"
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:background="@color/white" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvManageParticipantTitle"
                                    style="@style/TextViewJostRegularStyle"
                                    android:gravity="center"
                                    android:text="@string/view"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11ssp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSessionInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewJostRegularStyle"
                            android:gravity="center_vertical"
                            android:text="English with German Translation"
                            android:textColor="@color/medium_grey"
                            android:textSize="@dimen/_13ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewJostRegularStyle"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="PEAK PERFORMANCE › PRODUCTIVITY"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/_12ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewJostRegularStyle"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/lorem_meditation_detail"
                            android:textColor="@color/secondary_black"
                            android:textSize="@dimen/_13ssp" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/ffRemainingTimeForSessionStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.6"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewJostMediumStyle"
                                android:gravity="center"
                                android:text="@string/starts_in"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/_18ssp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvDaysRemaining"
                                        style="@style/TextViewJostMediumStyle"
                                        android:gravity="center"
                                        android:text="00"
                                        android:textColor="@color/secondary_black"
                                        android:textSize="@dimen/_35ssp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewJostRegularStyle"
                                        android:gravity="center"
                                        android:text="@string/days"
                                        android:textColor="@color/medium_grey"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvHoursRemaining"
                                        style="@style/TextViewJostMediumStyle"
                                        android:gravity="center"
                                        android:text="00"
                                        android:textColor="@color/secondary_black"
                                        android:textSize="@dimen/_35ssp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewJostRegularStyle"
                                        android:gravity="center"
                                        android:text="@string/hrs"
                                        android:textColor="@color/medium_grey"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvMinutesRemaining"
                                        style="@style/TextViewJostMediumStyle"
                                        android:gravity="center"
                                        android:text="00"
                                        android:textColor="@color/red"
                                        android:textSize="@dimen/_35ssp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewJostRegularStyle"
                                        android:gravity="center"
                                        android:text="@string/min_first_cap"
                                        android:textColor="@color/medium_grey"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvSecondsRemaining"
                                        style="@style/TextViewJostMediumStyle"
                                        android:gravity="center"
                                        android:text="00"
                                        android:textColor="@color/red"
                                        android:textSize="@dimen/_35ssp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewJostRegularStyle"
                                        android:gravity="center"
                                        android:text="@string/sec"
                                        android:textColor="@color/medium_grey"
                                        android:textSize="@dimen/_12ssp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/ffWaitingForHost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.6"
                            android:background="@color/white" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewJostMediumStyle"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:paddingTop="@dimen/_20sdp"
                            android:paddingBottom="@dimen/_20sdp"
                            android:text="@string/waiting_for_host"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_18ssp"
                            android:visibility="visible" />

                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/llSessionLiveOtherUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_toStartOf="@id/llLiveTime"
                            android:src="@drawable/vd_heart_wave"
                            android:visibility="gone" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_lines"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_toStartOf="@id/llLiveTime"
                            android:scaleType="fitXY"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="heart_waveform_animated_loop.json"
                            app:lottie_loop="true"
                            app:lottie_speed="1" />

                        <LinearLayout
                            android:id="@+id/llLiveTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewJostBoldStyle"
                                android:gravity="center_vertical"
                                android:text="@string/live"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_20ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewJostMediumStyle"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:gravity="center_vertical"
                                android:text="10:45"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_20ssp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardEndSession"
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_12ssp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="false"
                        tools:visibility="visible">

                        <LinearLayout
                            android:id="@+id/llEndSessionController"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_65sdp"
                            android:background="@drawable/bg_red_white_selector"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/vd_heart_wave"
                                android:visibility="gone" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:scaleType="fitXY"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="heart_waveform_animated_loop.json"
                                app:lottie_loop="true"
                                app:lottie_speed="1" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewJostMediumStyle"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:text="10:45"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_20ssp" />

                            <LinearLayout
                                android:id="@+id/llEndSession"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingStart="@dimen/_15sdp"
                                android:paddingEnd="@dimen/_5sdp">

                                <View
                                    android:layout_width="@dimen/_20ssp"
                                    android:layout_height="@dimen/_20ssp"
                                    android:background="@color/white" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/TextViewLatoBoldStyle"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:text="@string/end"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_20ssp" />
                            </LinearLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardStartNow"
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:visibility="gone"
                        app:cardCornerRadius="@dimen/_12ssp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="false"
                        tools:visibility="visible">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStartNow"
                            style="@style/ButtonWhiteStyle"
                            android:layout_height="@dimen/_65sdp"
                            android:background="@drawable/bg_light_dark_golden_curve"
                            android:fontFamily="@font/font_jost_semi_bold"
                            android:text="@string/start"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            app:backgroundTint="@null"
                            app:icon="@drawable/vd_white_polygon"
                            app:iconGravity="textEnd"
                            app:iconTint="@color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardJoinNow"
                        style="@style/CardViewStyle"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/_12ssp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnJoinSession"
                            style="@style/ButtonGoldStyle"
                            android:layout_height="@dimen/_65sdp"
                            android:background="@drawable/bg_light_dark_golden_curve"
                            android:text="@string/join_now" />

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/llJoinAs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/CardViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/llJoinAsLoginUser"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_white_curve"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/ic_dummy_user_profile_round"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewPoppinsRegularStyle"
                                        android:layout_marginBottom="-4dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/join_as"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="@dimen/_13ssp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewJostSemiBoldStyle"
                                        android:layout_marginTop="-4dp"
                                        android:gravity="center_vertical"
                                        android:text="Francisco"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="@dimen/_16ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/vd_right_arrow_gold"
                                        android:visibility="visible" />
                                </LinearLayout>


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            style="@style/CardViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/llJoinAsGuestUser"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_white_curve"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/ic_profile_default"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:orientation="vertical">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewPoppinsRegularStyle"
                                        android:layout_marginBottom="-4dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/join_as"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="@dimen/_13ssp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextViewJostSemiBoldStyle"
                                        android:layout_marginTop="-4dp"
                                        android:gravity="center_vertical"
                                        android:text="@string/guest"
                                        android:textColor="@color/dark_grey"
                                        android:textSize="@dimen/_16ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/vd_right_arrow_gold"
                                        android:visibility="visible" />
                                </LinearLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llChatSession"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/CardViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/rrChat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_white_curve"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/ic_dummy_user_profile_round"
                                    android:visibility="visible" />


                                <androidx.appcompat.widget.AppCompatTextView
                                    style="@style/TextViewJostMediumStyle"
                                    android:layout_centerInParent="true"
                                    android:text="CHAT (15)"
                                    android:textColor="@color/secondary_black"
                                    android:textSize="@dimen/_13ssp" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            style="@style/CardViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/rrLeaveSession"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_white_curve"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:src="@drawable/ic_profile_default"
                                    android:visibility="invisible" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvLeaveSessionTitle"
                                    style="@style/TextViewJostMediumStyle"
                                    android:layout_centerInParent="true"
                                    android:text="@string/leave"
                                    android:textColor="@color/secondary_black"
                                    android:textSize="@dimen/_13ssp" />

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/llBottomController"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/llAddToCalender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCalender"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        app:srcCompat="@drawable/vd_add_in_calender" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        app:srcCompat="@drawable/vd_add_to_favourite_session" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        app:srcCompat="@drawable/vd_share_session" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llInviteUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        app:srcCompat="@drawable/vd_add_member_session" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSessionEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        app:srcCompat="@drawable/vd_session_edit" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/bg_white_top_gradient" />
    </FrameLayout>
</layout>
