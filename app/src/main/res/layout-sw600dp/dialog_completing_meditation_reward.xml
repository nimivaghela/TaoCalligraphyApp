<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardReward"
            app:cardCornerRadius="@dimen/_24sdp"
            app:cardElevation="@dimen/_12sdp"
            app:strokeColor="@color/shimmer_light"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/ffRewardBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/ic_bg_silver_reward"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ivHeart"
                            android:src="@drawable/ic_silver_heart_reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPlus"
                                style="@style/TextViewJostRegularStyle"
                                android:text="+"
                                android:textColor="@color/dark_electric_blue"
                                android:textSize="@dimen/_32ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTotalHeart"
                                style="@style/TextViewJostSemiBoldStyle"
                                android:text="1"
                                android:textColor="@color/dark_electric_blue"
                                android:textSize="@dimen/_32ssp" />
                        </LinearLayout>
                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHeartTitle"
                        style="@style/TextViewJostSemiBoldStyle"
                        android:text="@string/silver_heart"
                        android:textColor="@color/dark_electric_blue"
                        android:textSize="@dimen/_36ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMeditationPeriod"
                        style="@style/TextViewJostRegularStyle"
                        android:gravity="center"
                        android:text="@string/silver_first_complete"
                        android:textColor="@color/dark_electric_blue"
                        android:textSize="@dimen/_18ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10ssp"
                        android:weightSum="1">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/CardViewStyle"
                            android:layout_width="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="0.5"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnYes"
                                style="@style/ButtonGoldStyle"
                                android:background="@drawable/bg_light_dark_golden_curve"
                                android:text="@string/earn_more"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.card.MaterialCardView>


                        <com.google.android.material.card.MaterialCardView
                            style="@style/CardViewStyle"
                            android:layout_width="0dp"
                            android:layout_margin="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="0.5"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnNo"
                                style="@style/ButtonGoldStyle"
                                android:background="@drawable/bg_light_dark_golden_curve"
                                android:text="@string/my_rewards"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12ssp" />

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivClose"
                    android:src="@drawable/vd_cross_gray"
                    app:tint="@color/dark_grey"
                    android:padding="@dimen/_20sdp"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>
