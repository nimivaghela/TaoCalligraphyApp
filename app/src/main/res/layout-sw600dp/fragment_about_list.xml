<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        tools:context=".ui.meditation_rooms_detail.fragment.AboutListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llIntroBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/light_grey_40"
                android:orientation="vertical"
                android:paddingStart="@dimen/_25sdp"
                android:paddingTop="@dimen/_16sdp"
                android:paddingEnd="@dimen/_25sdp"
                android:paddingBottom="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvIntoTitle"
                        style="@style/TextViewJostSemiBoldStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Open since: MMM DD, â€˜YY"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_18ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostRegularStyle"
                        android:text="Edit >"
                        android:textColor="@color/dark_gold"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Elementum lacinia luctus risus pharetra dui elementum ornare. Arcu ut interdum ullamcorper."
                    android:textColor="@color/secondary_black"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostSemiBoldStyle"
                    android:gravity="center_vertical"
                    android:text="How Your Visitors Feel"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_18ssp"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostSemiBoldStyle"
                    android:gravity="center_vertical"
                    android:text="What Others Experienced"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/_18ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostRegularStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:gravity="end|center_vertical"
                        android:text="Less Pain"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="0.7">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/tvReviewRelaxedCount"
                            android:indeterminate="false"
                            android:progress="85"
                            android:progressTint="@color/shimmer_dark"
                            app:indicatorColor="@color/shimmer_dark"
                            app:trackColor="@color/white"
                            app:trackCornerRadius="@dimen/_3sdp"
                            app:trackThickness="@dimen/_6sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReviewRelaxedCount"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="38K"
                            android:textColor="@color/medium_grey"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostRegularStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:gravity="end|center_vertical"
                        android:text="Energized"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="0.7">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/tvReviewEnergizedCount"
                            android:indeterminate="false"
                            android:progress="60"
                            android:progressTint="@color/shimmer_dark"
                            app:indicatorColor="@color/shimmer_dark"
                            app:trackColor="@color/white"
                            app:trackCornerRadius="@dimen/_3sdp"
                            app:trackThickness="@dimen/_6sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReviewEnergizedCount"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="27K"
                            android:textColor="@color/medium_grey"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostRegularStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:gravity="end|center_vertical"
                        android:text="Relaxed"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="0.7">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/tvReviewPeacefulCount"
                            android:indeterminate="false"
                            android:progress="50"
                            android:progressTint="@color/shimmer_dark"
                            app:indicatorColor="@color/shimmer_dark"
                            app:trackColor="@color/white"
                            app:trackCornerRadius="@dimen/_3sdp"
                            app:trackThickness="@dimen/_6sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReviewPeacefulCount"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="25K"
                            android:textColor="@color/medium_grey"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostRegularStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:gravity="end|center_vertical"
                        android:text="Peaceful"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_12ssp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="0.7">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/tvReviewHappierCount"
                            android:indeterminate="false"
                            android:progress="25"
                            android:progressTint="@color/shimmer_dark"
                            app:indicatorColor="@color/shimmer_dark"
                            app:trackColor="@color/white"
                            app:trackCornerRadius="@dimen/_3sdp"
                            app:trackThickness="@dimen/_6sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReviewHappierCount"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="21K"
                            android:textColor="@color/medium_grey"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHostDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostSemiBoldStyle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Your Host, Sunil"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_18ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostMediumStyle"
                        android:layout_width="wrap_content"
                        android:background="@drawable/bg_white_gold_border"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="Full Profile"
                        android:textColor="@color/medium_grey"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Elementum lacinia luctus risus pharetra dui elementum ornare. Arcu ut interdum ullamcorper."
                    android:textColor="@color/secondary_black"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHostListDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostSemiBoldStyle"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:text="Your Hosts"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/_18ssp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHostList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_host_list" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@drawable/ic_followers_bg"
                android:orientation="vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostSemiBoldStyle"
                        android:text="Followers"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_18ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostSemiBoldStyle"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="97K"
                        android:textColor="@color/medium_grey"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_gray_95_light_white_border_30dp"
                    android:drawableStart="@drawable/vd_gray_search"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/font_jost_regular"
                    android:hint="@string/search_tab"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="@dimen/_12sdp"
                    android:textColor="@color/secondary_black"
                    android:textColorHint="@color/dark_grey" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFollowersList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:itemCount="12" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="More"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/vd_gray_arrow_down" />

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>