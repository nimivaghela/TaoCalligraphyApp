<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:src="@drawable/ic_progress_line_1" />

        <FrameLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_162sdp"
                android:layout_height="@dimen/_162sdp"
                android:layout_gravity="center"
                android:src="@drawable/bg_gery_40_round" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="@color/gold"
                app:cpb_background_progressbar_color_direction="bottom_to_top"
                app:cpb_background_progressbar_width="@dimen/_1sdp"
                app:cpb_progress="100"
                app:cpb_progress_direction="to_right"
                app:cpb_progress_max="100"
                app:cpb_progressbar_color_direction="bottom_to_top"
                app:cpb_progressbar_color_end="@color/varden"
                app:cpb_progressbar_color_start="@color/dandelion"
                app:cpb_progressbar_width="@dimen/_13sdp"
                app:cpb_round_border="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <FrameLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey"
                        app:civ_border_color="@color/light_grey"
                        app:civ_border_width="@dimen/_2sdp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostMediumStyle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="02"
                        android:textAllCaps="true"
                        android:textColor="@color/medium_grey"
                        android:textSize="@dimen/_26ssp" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="NOV 30"
                    android:textAllCaps="true"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_260sdp"
            android:layout_marginEnd="@dimen/_85sdp"
            android:src="@drawable/ic_progress_line_2" />

        <FrameLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@+id/ivLine"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_162sdp"
                android:layout_height="@dimen/_162sdp"
                android:layout_gravity="center"
                android:src="@drawable/bg_gery_40_round" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="@color/gold"
                app:cpb_background_progressbar_color_direction="bottom_to_top"
                app:cpb_background_progressbar_width="@dimen/_1sdp"
                app:cpb_progress="100"
                app:cpb_progress_direction="to_right"
                app:cpb_progress_max="100"
                app:cpb_progressbar_color_direction="bottom_to_top"
                app:cpb_progressbar_color_end="@color/varden"
                app:cpb_progressbar_color_start="@color/dandelion"
                app:cpb_progressbar_width="@dimen/_13sdp"
                app:cpb_round_border="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <FrameLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey"
                        app:civ_border_color="@color/light_grey"
                        app:civ_border_width="@dimen/_2sdp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostMediumStyle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="02"
                        android:textAllCaps="true"
                        android:textColor="@color/medium_grey"
                        android:textSize="@dimen/_26ssp" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="NOV 30"
                    android:textAllCaps="true"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_350sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_162sdp"
                android:layout_height="@dimen/_162sdp"
                android:layout_gravity="center"
                android:src="@drawable/bg_gery_40_round" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="@color/gold"
                app:cpb_background_progressbar_color_direction="bottom_to_top"
                app:cpb_background_progressbar_width="@dimen/_1sdp"
                app:cpb_progress="100"
                app:cpb_progress_direction="to_right"
                app:cpb_progress_max="100"
                app:cpb_progressbar_color_direction="bottom_to_top"
                app:cpb_progressbar_color_end="@color/varden"
                app:cpb_progressbar_color_start="@color/dandelion"
                app:cpb_progressbar_width="@dimen/_13sdp"
                app:cpb_round_border="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <FrameLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey"
                        app:civ_border_color="@color/light_grey"
                        app:civ_border_width="@dimen/_2sdp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:scaleType="centerCrop"
                        android:src="@color/light_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostMediumStyle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="02"
                        android:textAllCaps="true"
                        android:textColor="@color/medium_grey"
                        android:textSize="@dimen/_26ssp" />

                </FrameLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="NOV 30"
                    android:textAllCaps="true"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</layout>