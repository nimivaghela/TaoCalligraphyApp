<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.meditation.MeditationFeedbackActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivMascot"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/vd_mascot"
                        android:visibility="visible" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostSemiBoldStyle"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="@string/thanks_for_joining"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/_22ssp" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="@string/your_experience_matter"
                    android:textColor="@color/secondary_black"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingFeedback"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewJostRegularStyle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:text="@string/rate_this_session"
                    android:textColor="@color/secondary_black"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/bg_white_smoke_top_radius_18dp"
                    android:elevation="@dimen/_15sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_50sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewJostSemiBoldStyle"
                        android:gravity="center"
                        android:text="@string/how_your_experience"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/_18ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFeelRelaxed"
                            style="@style/TextViewJostRegularStyle"
                            android:background="@drawable/bg_white_gold_border_22dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/relaxed"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_13ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFeelEnergized"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/bg_white_gold_border_22dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/energized"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_13ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFeelHappier"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/bg_white_gold_border_22dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/happier"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFeelCalmer"
                            style="@style/TextViewJostRegularStyle"
                            android:background="@drawable/bg_white_gold_border_22dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/calmer"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_13ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFeelLighter"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/bg_white_gold_border_22dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/lighter"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_13ssp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFeelLessPain"
                            style="@style/TextViewJostRegularStyle"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/bg_white_gold_border_22dp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/less_pain"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_13ssp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatEditText
                        style="@style/TextViewJostRegularStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/bg_white_medium_grey_border_10dp"
                        android:hint="@string/type_word"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/secondary_black"
                        android:textColorHint="@color/medium_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_10ssp"
                        android:weightSum="1">

                        <com.google.android.material.card.MaterialCardView
                            style="@style/CardViewStyle"
                            android:layout_width="0dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="0.5"
                            app:cardElevation="0dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnSaveAndClose"
                                style="@style/ButtonGoldStyle"
                                android:background="@drawable/bg_light_dark_golden_curve"
                                android:text="@string/save_close"
                                android:textSize="@dimen/_10ssp" />
                        </com.google.android.material.card.MaterialCardView>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5">

                            <com.google.android.material.card.MaterialCardView
                                style="@style/CardViewStyle"
                                android:layout_width="match_parent"
                                android:layout_margin="0dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="0dp"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnSaveAndJournal"
                                    style="@style/ButtonWhiteStyle"
                                    android:background="@drawable/bg_white_curve_gold_border"
                                    android:letterSpacing="0"
                                    android:padding="0dp"
                                    android:text="@string/open_journal"
                                    android:textColor="@color/gold"
                                    android:textSize="@dimen/_10ssp"
                                    app:backgroundTint="@null"
                                    app:fontFamily="@font/font_jost_semi_bold"
                                    app:icon="@drawable/vd_pencil"
                                    app:iconGravity="textEnd" />
                            </com.google.android.material.card.MaterialCardView>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_14ssp"
                                android:layout_height="@dimen/_14ssp"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_1sdp"
                                android:src="@drawable/vd_pencil"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        style="@style/CardViewStyle"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:cardElevation="0dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSkip"
                            style="@style/ButtonWhiteStyle"
                            android:background="@drawable/bg_white_smoke_curve"
                            android:text="@string/skip_for_now"
                            android:textAllCaps="false"
                            android:textColor="@color/medium_grey"
                            android:textSize="@dimen/_12ssp" />
                    </com.google.android.material.card.MaterialCardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>
