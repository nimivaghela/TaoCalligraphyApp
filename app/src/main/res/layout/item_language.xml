<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLanguage"
            style="@style/TextViewJostMediumStyle"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivRadio"
            android:layout_marginTop="@dimen/_18ssp"
            android:layout_marginStart="@dimen/_26sdp"
            android:textColor="@color/secondary_black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Germen" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivRadio"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginEnd="@dimen/_20sdp"
            android:src="@drawable/vd_status_unselected"
            app:layout_constraintBottom_toBottomOf="@+id/tvLanguage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvLanguage" />


        <View
            android:visibility="invisible"
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@color/medium_grey_30"
            android:layout_marginTop="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLanguage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

