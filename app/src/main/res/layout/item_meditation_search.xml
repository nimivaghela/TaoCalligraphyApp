<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_135sdp"
        android:layout_height="@dimen/_205sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivMeditationSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:background="@drawable/ic_dummy_morning_freshen_up" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivContentBgGradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_black_gradient" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/vd_play_button"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tVGet"
                    style="@style/TextViewJostRegularStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gold_top_left_bottom_right_10dp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/get"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ivSubscribeLock"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    android:layout_gravity="bottom"
                    app:cardBackgroundColor="@color/dark_grey_80"
                    android:visibility="gone"
                    tools:visibility="visible"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/ic_lock"
                        />
                </com.google.android.material.card.MaterialCardView>

                <FrameLayout
                    android:id="@+id/flFavourite"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="end">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieFavourite"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="false"
                        app:lottie_scale="@integer/material_motion_duration_long_1" />

                </FrameLayout>

            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_95sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    style="@style/TextViewJostMediumStyle"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/secondary_black"
                    android:textSize="@dimen/_13ssp"
                    tools:text="Release Back Pain" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivType"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@id/tvTitle"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/vd_video_grey_icon" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvType"
                    style="@style/TextViewJostMediumStyle"
                    android:layout_width="match_parent"
                    android:layout_below="@id/tvTitle"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toEndOf="@id/ivType"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="2"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/_11ssp"
                    tools:text="GUIDED mEdia AUDIO / 10 mins" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDescription"
                    style="@style/TextViewJostRegularStyle"
                    android:layout_below="@id/tvType"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/_11ssp"
                    tools:text="Meditate with thekdnksjdfjksdfhklfdklfdklfdkvgfhfghfghfghfghgfhfghghghghghdjklkdfkdl light of the sun and the Tao Calligraphy of the greatest compassion..." />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_66"
                android:visibility="gone"
                tools:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/vd_background_lock_icon" />

            </RelativeLayout>


        </FrameLayout>
    </androidx.cardview.widget.CardView>


</layout>