<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="@dimen/_54sdp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">


        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCategoryImage"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:padding="@dimen/_1sdp"
                android:theme="@style/ShapeAppearanceOverlay_Round"
                tools:padding="@dimen/_2sdp"
                tools:srcCompat="@drawable/vd_health_icon" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivFeaturedBg"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_gold_gradient_round"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivFeaturedImage"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:paddingStart="-6dp"
                android:src="@drawable/ic_iv_featured_ribbon"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCategoryTitle"
            style="@style/TextViewJostRegularStyle"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_8ssp"
            tools:text="Health" />

    </LinearLayout>


</layout>