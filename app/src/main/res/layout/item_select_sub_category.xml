<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/rlCategory"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCategoryImage"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitCenter"
                android:theme="@style/ShapeAppearanceOverlay_Round"
                tools:src="@drawable/ic_category_default" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCategoryImageSelected"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_1sdp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:visibility="gone"
                android:theme="@style/ShapeAppearanceOverlay_Round"
                tools:src="@drawable/ic_category_default" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivFeaturedBg"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_gold_gradient_round"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivFeaturedImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_iv_featured_ribbon"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCategoryTitle"
            style="@style/TextViewJostRegularStyle"
            android:layout_width="wrap_content"
            android:layout_below="@id/rlCategory"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/_3sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:layout_centerHorizontal="true"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/_10ssp"
            tools:text="Health" />

    </RelativeLayout>


</layout>