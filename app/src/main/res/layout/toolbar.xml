<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/innerToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            android:elevation="@dimen/_3sdp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:elevation="@dimen/_3sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/flProfile"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_20sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfileImageToolbar"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:animateLayoutChanges="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_profile_default"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/bg_red_circle_chat_badge"
                        android:fontFamily="@font/font_jost_medium"
                        android:paddingStart="@dimen/_6sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone"
                        tools:text="9+"
                        tools:visibility="visible" />


                </FrameLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCorporateLogoToolbar"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/flProfile"
                    android:src="@drawable/bg_white_curve_20dp"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ivBackToolbar"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:background="@drawable/bg_white_round"
                    android:elevation="@dimen/_3sdp"
                    android:src="@drawable/vd_grey_back_arrow"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitleToolbar"
                    style="@style/TextViewCormorantBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@+id/ivBackToolbar"
                    android:gravity="start"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:letterSpacing="-0.02"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/gold_90"
                    android:textSize="@dimen/_28ssp"
                    android:visibility="gone"
                    tools:text="Title dfdsfdfdfdfdfdfdfdfdsfs szdfsfdsf"
                    tools:visibility="visible" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTodayToolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/bg_light_dark_golden_small_curve"
                    android:fontFamily="@font/font_jost_semi_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                    android:text="@string/today"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="gone"
                    app:backgroundTint="@null"
                    app:elevation="0dp"
                    tools:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/flTrophyToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/ivTrophyToolbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:src="@drawable/vd_trophy_icon" />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/circleProgressTrophy"
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_gravity="center"
                            android:indeterminate="false"
                            android:progress="75"
                            android:progressTint="@color/dandelion"
                            app:indicatorColor="@color/dandelion"
                            app:indicatorSize="@dimen/_38sdp"
                            app:trackColor="@color/white"
                            app:trackThickness="@dimen/_3sdp" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/llLikeDislikeView"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_curve_20dp"
                        android:elevation="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/ivLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:src="@drawable/vd_thumbs_up_gray" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@color/light_gray" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/ivDisLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:src="@drawable/vd_thumbs_down_gray" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivSaveToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:src="@drawable/vd_save"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivShareToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:src="@drawable/vd_share"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <FrameLayout
                        android:id="@+id/frameInvite"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/vd_invite_user_icon" />
                    </FrameLayout>

                    <!--                    <androidx.appcompat.widget.AppCompatImageButton
                                            android:id="@+id/ivInviteToolbar"
                                            android:layout_width="@dimen/_38sdp"
                                            android:layout_height="@dimen/_38sdp"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:layout_marginEnd="@dimen/_6sdp"
                                            android:layout_marginBottom="@dimen/_2sdp"
                                            android:background="@drawable/bg_white_round"
                                            android:elevation="@dimen/_3sdp"
                                            android:src="@drawable/vd_invite_user_icon"
                                            android:visibility="gone"
                                            tools:visibility="visible" />-->

                    <!--<androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivLikeToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:src="@drawable/vd_like_grey_icon"
                        android:visibility="gone"
                        tools:visibility="visible" />-->

                    <FrameLayout
                        android:id="@+id/frameLikeToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:visibility="gone">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottieLike"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false"
                            app:lottie_scale="@integer/material_motion_duration_long_1" />

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/llAnnouncementToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/vd_chat_white_icon"
                        android:gravity="center"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAnnouncementToolbar"
                            style="@style/TextViewJostSemiBoldStyle"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_20ssp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivFavouriteToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:src="@drawable/vd_unfavourite_icon"
                        android:visibility="gone"
                        tools:visibility="gone" />

                    <FrameLayout
                        android:id="@+id/ivDownloadToolbar"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageButton
                                android:id="@+id/ivDownloadStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@android:color/white"
                                android:src="@drawable/vd_download_icon" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvContentFileSize"
                                style="@style/TextViewJostMediumStyle"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/dark_grey"
                                android:textSize="8sp"
                                android:visibility="gone"
                                tools:text="200 MB"
                                tools:visibility="visible" />
                        </LinearLayout>


                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/circleProgressDownload"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:indeterminate="false"
                            android:progress="0"
                            android:progressTint="@color/gold"
                            app:indicatorColor="@color/gold"
                            app:indicatorSize="@dimen/_40sdp"
                            app:trackColor="@color/white"
                            app:trackThickness="@dimen/_3sdp" />

                        <View
                            android:id="@+id/viewDownload"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </FrameLayout>


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivNewChat"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:tint="@color/gold"
                        android:visibility="gone"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivNewJournal"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_gold_round"
                        android:elevation="@dimen/_3sdp"
                        android:src="@drawable/ic_pencil"
                        android:visibility="gone"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/ivDeleteToolbar"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_white_round"
                        android:elevation="@dimen/_3sdp"
                        android:src="@drawable/vd_delete"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <ImageView
                        android:id="@+id/ivToolBarMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/vd_more_white"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>


</layout>